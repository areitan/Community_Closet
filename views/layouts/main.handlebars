<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Community Closet</title>
  {{!-- <link rel="stylesheet" href="/css/jass.css"> --}}
  <link rel="stylesheet" href="/css/style.css">
</head>

<body>
  <div class="flex-column justify-space-around">
    <header class="display-flex justify-space-between align-center p-2">
      <h1>
        <a href="/">Community Closet</a>
      </h1>

      <nav>
        <!-- Conditionally render login or logout links -->
        {{#if logged_in}}
        <button class="btn"><a href="/profile">profile</a></button>
        <button class="btn"><a class="link" href="/" id="logout">Logout</a></button>
        {{else}}
        <button class="btn"><a href="/login">login</a></button>
        <button class="btn"><a href="/homepage">Home</a></button>
        {{/if}}
      </nav>

    </header>

    <main class="container container-fluid mt-5">
      <!-- Render the sub layout -->
      {{{ body }}}
    </main>
   
  </div>

  <!-- Render script for logged in users only -->
  {{#if logged_in}}
  <script src="/js/logout.js"></script>
  {{/if}}
</body>

</html>
