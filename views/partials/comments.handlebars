
<div class="comments">
  {{#each this}}
    <div class="card">
        <h5 class="card-header">Comment:</h5>

        <div class="comment card-body">
          
            <div class="comment">
                {{body}}
            </div>
            
            <div>
                posted by {{user.name}} on {{format_date}}
            </div>
            
        </div>
        
    </div>
  {{/each}}
</div>